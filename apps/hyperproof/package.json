{
  "version": "1.0.0",
  "name": "hyperproof",
  "app_hyperproof": {
    "name": "Hyperproof",
    "appType": "hypersync",
    "authType": "oauth",
    "category": "Compliance Management",
    "descriptionCapabilities": "This integration extracts users, control and label information from the Hyperproof service",
    "debug": true,
    "staticIp": false
  },
  "scripts": {
    "build": "npm run lint && tsc && npm run copydecl",
    "copydecl": "rimraf ./build/json && copyfiles -u 2 ./src/json/*.json ./src/json/proof/*.json ./build/json",
    "lint": "node ./node_modules/eslint/bin/eslint.js src/**/*.ts"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "@hyperproof/hypersync-sdk": "^2.0.0",
    "http-errors": "1.8.0",
    "http-status-codes": "2.1.4",
    "jsonwebtoken": "^9.0.0",
    "node-fetch": "2.6.7"
  },
  "devDependencies": {
    "@types/http-errors": "^1.8.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "copyfiles": "^2.4.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "ts-node": "8.0.2",
    "typescript": "4.4.4"
  }
}
